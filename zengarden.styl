/*
*$footer
*/
footer 
	background #49337A
	text-align center
	padding 1em 0
footer a 
	-moz-transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
	-webkit-transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
	background none
	color transparent
	color: rgba(255, 255, 255, 0);
	display: inline-block;
	height: 40px;
	margin: 0 0.3em;
	overflow: hidden;
	position: relative;
	transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
	width: 40px;
footer a:before
		-webkit-font-smoothing: antialiased;
		color: rgba(255, 255, 255, .9);
		display: block;
		font-family: 'icomoon';
		font-size: 40px;
		font-variant: normal;
		font-weight: normal;
		left: 0;
		line-height: 1;
		overflow: visible;
		position: absolute;
		speak: none;
		text-indent: 0;
		text-transform: none;
		top: 3px;
footer a:hover
		color transparent
		background none
		box-shadow -5px -5px 5px red

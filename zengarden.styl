/********footer***********/
footer 
	background #49337A
	margin 1em 0
	text-align center
	padding 1em 0
footer a 
	background none
	color transparent
	display: inline-block;
	height: 40px;
	// line-height 40px
	margin: 0 0.3em;
	overflow: hidden;
	// padding: .3em 
	position: relative;
	width: 40px;
	color: rgba(255, 255, 255, 0);
	-webkit-transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
	-moz-transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
	transition: color 0.25s ease-out, box-shadow 0.25s ease-out;
footer a:before
	-webkit-font-smoothing: antialiased;
	color: rgba(255, 255, 255, .9);
	display: block;
	font-family: 'icomoon';
	font-size: 40px;
	font-variant: normal;
	font-weight: normal;
	left: 0;
	line-height: 1;
	overflow: visible;
	position: absolute;
	speak: none;
	text-indent: 0;
	text-transform: none;
	top: 3px;
footer a:hover
	color transparent
	background none
	box-shadow -5px -5px 5px red
.zen-validate-html:before
	content: "\eadf";
.zen-validate-css:before
	content: "\eae1";
.zen-license:before
	content: "\eab1";
.zen-accessibility:before
	content: "\e9b2";
.zen-github:before
	content: "\eab1";	
